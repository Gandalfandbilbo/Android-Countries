<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_marginTop="10dp"
        android:text="Score"
        android:textSize="35dp"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"/>

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:paddingTop="70dp"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:textSize="30dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/choose"
        android:text="Choose Quiz Difficulty"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/question"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/easy"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:layout_marginTop="180dp"
        android:textSize="25dp"
        android:onClick="easy"/>
    <Button
        android:id="@+id/medium"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:layout_marginTop="230dp"
        android:textSize="25dp"
        android:onClick="medium"/>
    <Button
        android:id="@+id/hard"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Hard"
        android:layout_marginTop="280dp"
        android:textSize="25dp"
        android:onClick="hard"/>
    <Button
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_marginTop="350dp"
        android:visibility="invisible"
        android:onClick="choice1"/>
    <Button
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_marginTop="395dp"
        android:visibility="invisible"
        android:onClick="choice2"/>
    <Button
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_marginTop="440dp"
        android:visibility="invisible"
        android:onClick="choice3"/>
    <Button
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:layout_marginTop="485dp"
        android:visibility="invisible"
        android:onClick="choice4"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:id="@+id/again"
        android:textSize="25dp"
        android:onClick="again"
        android:text="Click Me! to Try Again"
        android:visibility="invisible"/>

</RelativeLayout>